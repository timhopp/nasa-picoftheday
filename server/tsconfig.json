{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./distribution/",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": ["src/**/**/*",
  "package.json"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}