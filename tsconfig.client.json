{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "./distribution/",
    "rootDir": "./client",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "target": "es5"
  },

  "extends": "../tsconfig.json",
  "include": [
    "src/**/**/*"
  ],
  "exclude": ["node_modules", "./server"]
}